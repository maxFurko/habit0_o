<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreferenceCompat
        android:key="@string/setting_notification_enable_key"
        android:title="@string/setting_notification_enable_title"
        android:summary="@string/setting_notification_enable_summary"
        android:defaultValue="true"/>

    <SwitchPreferenceCompat
        android:key="@string/setting_touch_feedback_key"
        android:title="@string/setting_touch_feedback_title"
        android:summary="@string/setting_touch_feedback_summary"
        android:defaultValue="true"/>

    <ListPreference
        android:key="@string/setting_task_sort_key"
        android:title="@string/setting_task_sort_title"
        android:entries="@array/SortTasksEntries"
        android:entryValues="@array/SortTasksEntryValues"
        android:summary="%s"
        android:defaultValue="priority"/>

    <ListPreference
        android:key="@string/setting_task_stat_key"
        android:title="@string/setting_task_stat_title"
        android:entries="@array/TaskValueEntries"
        android:entryValues="@array/TaskValueEntryValues"
        android:summary="%s"
        android:defaultValue="score"/>

    <Preference
        android:key="@string/setting_delete_all_habits_key"
        android:title="@string/setting_delete_all_habits_title"
        android:summary="@string/setting_delete_all_habits_summary"/>

</PreferenceScreen>