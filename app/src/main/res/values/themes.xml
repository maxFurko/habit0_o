<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HabitTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="NavigationElementStyle">
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:background">@color/colorNavigationElement</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemTitleStyle">
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MessageTextStyle">
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorIconTint</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TaskInfoTextStyle">
        <item name="android:textSize">@dimen/extraSmallTextSize</item>
        <item name="android:textColor">@color/colorTextPrimaryLight</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HabitFormHeaderStyle">
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textColor">@color/colorTextPrimaryLight</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SubHeaderStyle">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">@color/colorTextPrimaryLight</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="BarTextStyle">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorSecondaryBackground</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>

    <style name="WeekDayButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_round_button</item>
        <item name="android:textColor">@color/text_color_round_button</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>

    <style name="ScoreTextStyle">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/scoreTextSize</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:text">+0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:contentDescription">@string/score_content_description</item>
    </style>

    <style name="TaskPopUpStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/taskPopUpTextSize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>